  </section>-->

  <section class="addspot">
      <h1>Create Spot</h1>
      <form action="/addspot" method="post">
          <p>
              <input type="text" name="newSpot" id="newSpot" placeholder="Place number" autofocus />
              <button type="submit">CREATE</button>
          </p>
      </form>
  </section>
  </body>
</html>
